<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="info.androidhive.loginandregistration"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="23" />

    <uses-permission android:name="android.permission.INTERNET" />

    <android:uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <android:uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <android:uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        name="info.androidhive.loginandregistration.app.AppController"
        android:name="com.android.tools.fd.runtime.BootstrapApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Start Home Automation"
        android:theme="@style/AppTheme" >
        <activity
            android:name="info.androidhive.loginandregistration.activity.LoginActivity"
            android:label="Start Home Automation"
            android:launchMode="singleTop"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name="info.androidhive.loginandregistration.activity.RegisterActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name="info.androidhive.loginandregistration.activity.adminPage" />
        <activity android:name="info.androidhive.loginandregistration.activity.otherUserPage" />
        <activity android:name="info.androidhive.loginandregistration.activity.childPage" />
        <activity android:name="info.androidhive.loginandregistration.activity.adminActivities" />
        <activity android:name="info.androidhive.loginandregistration.activity.changepassword" />
        <activity android:name="info.androidhive.loginandregistration.activity.startHomeAutomation" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="info.androidhive.loginandregistration.activity.forgotpassword" />
        <activity android:name="info.androidhive.loginandregistration.activity.DeleteActivity" />
        <activity android:name="info.androidhive.loginandregistration.activity.RegisterByAdmin" />
        <activity android:name="info.androidhive.loginandregistration.activity.childactivities" />
        <activity android:name="info.androidhive.loginandregistration.activity.logHistory" />
        <activity android:name="info.androidhive.loginandregistration.activity.ForgotPD" />
        <activity android:name="info.androidhive.loginandregistration.activity.otherUserActivity" />
        <activity android:name="info.androidhive.loginandregistration.activity.change_pwd_other" />
        <activity android:name="info.androidhive.loginandregistration.activity.change_pwd_child" />
    </application>

</manifest>